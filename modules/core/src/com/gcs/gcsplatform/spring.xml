<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.gcs.gcsplatform"/>
    <bean id="cubaDataSource_gcsblotter"
          class="com.haulmont.cuba.core.sys.CubaDataSourceFactoryBean">
        <property name="storeName"
                  value="gcsblotter"/>
    </bean>
    <bean id="entityManagerFactory_gcsblotter"
          class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
          lazy-init="false">
        <property name="persistenceXmlLocation"
                  value="file:${cuba.dataDir}/gcsblotter-persistence.xml"/>
        <property name="dataSource"
                  ref="cubaDataSource_gcsblotter"/>
        <property name="jpaVendorAdapter"
                  ref="jpaVendorAdapter"/>
    </bean>
    <bean id="transactionManager_gcsblotter"
          class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory"
                  ref="entityManagerFactory_gcsblotter"/>
        <property name="dataSource"
                  ref="cubaDataSource_gcsblotter"/>
        <qualifier type="org.springframework.beans.factory.annotation.Qualifier"
                   value="gcsblotter"/>
    </bean>

</beans>
