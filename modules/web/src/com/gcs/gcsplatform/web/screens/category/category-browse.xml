<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://categoryBrowse.caption"
        focusComponent="categoriesTable"
        messagesPack="com.gcs.gcsplatform.web.screens.category">
    <data readOnly="true">
        <collection id="categoriesDc"
                    class="com.gcs.gcsplatform.entity.masterdata.Category">
            <view extends="_local"/>
            <loader id="categoriesDl">
                <query>
                    <![CDATA[select e from gcsplatform_Category e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="categoriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="categoriesTable"
                dataLoader="categoriesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="categoriesTable"
                    width="100%"
                    dataContainer="categoriesDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="category"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="categoriesTable.create"/>
                <button id="editBtn"
                        action="categoriesTable.edit"/>
                <button id="removeBtn"
                        action="categoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
