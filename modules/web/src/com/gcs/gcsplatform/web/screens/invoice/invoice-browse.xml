<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://invoiceBrowse.caption"
        focusComponent="invoicesTable"
        messagesPack="com.gcs.gcsplatform.web.screens.invoice">
    <data readOnly="true">
        <collection id="invoicesDc"
                    class="com.gcs.gcsplatform.entity.invoice.Invoice">
            <view extends="_local">
                <property name="pdfFile"
                          view="_minimal"/>
                <property name="xlsxFile"
                          view="_minimal"/>
            </view>
            <loader id="invoicesDl">
                <query>
                    <![CDATA[select e from gcsplatform_Invoice e order by e.updateTs desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="invoicesTable"
            spacing="true">
        <filter id="filter"
                applyTo="invoicesTable"
                dataLoader="invoicesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="invoicesTable"
                    width="100%"
                    dataContainer="invoicesDc"
                    multiselect="true">
            <actions>
                <action id="excel"
                        type="excel"/>
                <action id="print"
                        trackSelection="true"/>
                <action id="workDocs"
                        trackSelection="true"/>
            </actions>
            <columns>
                <column id="xlsxFile"/>
                <column id="pdfFile"/>
                <column id="issue"/>
                <column id="currency"/>
                <column id="counterpartyCode"/>
                <column id="location"/>
                <column id="startDate"/>
                <column id="endDate"/>
                <column id="amount"/>
                <column id="fx"/>
                <column id="fxUsd"/>
                <column id="gbpAmount"/>
                <column id="usdAmount"/>
                <column id="postedToWorkDocs"/>
                <column id="postedToQB"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="excelBtn"
                        action="invoicesTable.excel"/>
                <button id="printBtn"
                        caption="msg://printAction"
                        action="invoicesTable.print"
                        stylename="primary"/>
                <button id="workDocsBtn"
                        caption="msg://workDocsAction"
                        action="invoicesTable.workDocs"
                        stylename="friendly"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
