<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        focusComponent="tradesTable">
    <data readOnly="true">
        <collection id="tradesDc"
                    class="com.gcs.gcsplatform.entity.trade.Trade">
            <view extends="_local"
                  systemProperties="true"/>
            <loader id="tradesDl"/>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tradesTable"
            spacing="true">
        <filter id="filter"
                applyTo="tradesTable"
                dataLoader="tradesDl"
                collapsed="true"
                settingsEnabled="false">
            <properties include=".*"/>
        </filter>
        <groupTable id="tradesTable"
                    width="100%"
                    dataContainer="tradesDc"
                    multiselect="false">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
                <action id="refresh"
                        type="refresh"/>
            </actions>
            <columns>
                <column id="traderef"/>
                <column id="tradeDate">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter"
                               format="dd/MM/yyyy"/>
                </column>
                <column id="bondDescription"/>
                <column id="isin"/>
                <column id="buyer"/>
                <column id="buybrokerage"/>
                <column id="seller"/>
                <column id="sellbrokerage"/>
                <column id="nominal"/>
                <column id="updateTs">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter"
                               format="dd/MM/yyyy"/>
                </column>
                <column id="valueDate">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter"
                               format="dd/MM/yyyy"/>
                </column>
                <column id="maturityDate">
                    <formatter class="com.haulmont.cuba.gui.components.formatters.DateFormatter"
                               format="dd/MM/yyyy"/>
                </column>
                <column id="hairCut"/>
                <column id="currency"/>
                <column id="brokerInitials"/>
                <column id="notes"/>
                <column id="buyerAgent"
                        collapsed="true"/>
                <column id="calloption"
                        collapsed="true"/>
                <column id="category"
                        collapsed="true"/>
                <column id="cpair1"
                        collapsed="true"/>
                <column id="cpair2"
                        collapsed="true"/>
                <column id="cpair3"
                        collapsed="true"/>
                <column id="buyPnl"
                        collapsed="true"/>
                <column id="buyGbpEquivalent"
                        collapsed="true"/>
                <column id="sellPnl"
                        collapsed="true"/>
                <column id="sellGbpEquivalent"
                        collapsed="true"/>
                <column id="numdays"
                        collapsed="true"/>
                <column id="origtraderef"
                        collapsed="true"/>
                <column id="repoRate"
                        collapsed="true"/>
                <column id="sellerAgent"
                        collapsed="true"/>
                <column id="startPrice"
                        collapsed="true"/>
                <column id="status"
                        collapsed="true"/>
                <column id="tradeCurrency"
                        collapsed="true"/>
                <column id="uti"
                        collapsed="true"/>
                <column id="xrate1"
                        collapsed="true"/>
                <column id="xrate2"
                        collapsed="true"/>
                <column id="xrate3"
                        collapsed="true"/>
                <column id="gc"
                        collapsed="true"/>
                <column id="special"
                        collapsed="true"/>
                <column id="subThirty"
                        collapsed="true"/>
                <column id="moreThanThirty"
                        collapsed="true"/>
                <column id="brooveride"
                        collapsed="true"/>
                <column id="subs"
                        collapsed="true"/>
                <column id="gmSla"
                        collapsed="true"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="tradesTable.create"/>
                <button id="editBtn"
                        action="tradesTable.edit"/>
                <button id="removeBtn"
                        action="tradesTable.remove"/>
                <button id="refreshBtn"
                        action="tradesTable.refresh"/>
                <button id="pnlChartBtn"
                        stylename="friendly"
                        caption="msg://pnl"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
