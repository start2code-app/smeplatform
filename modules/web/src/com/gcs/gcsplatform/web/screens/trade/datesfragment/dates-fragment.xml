<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://schemas.haulmont.com/cuba/screen/fragment.xsd">
    <data>
        <instance id="tradeDc"
                  class="com.gcs.gcsplatform.entity.trade.Trade"
                  provided="true"/>
    </data>
    <layout spacing="true"
            height="100%">
        <form id="datesForm"
              dataContainer="tradeDc">
            <column width="250px">
                <dateField id="valueDateField"
                           property="valueDate"
                           resolution="DAY"/>
                <dateField id="maturityDateField"
                           property="maturityDate"
                           resolution="DAY"
                           editable="false"/>
                <dateField id="tradeDateField"
                           resolution="DAY"
                           property="tradeDate"/>
                <dateField id="invoiceDateField"
                           resolution="DAY"
                           property="invoiceDate"/>
                <textField id="numdaysField"
                           property="numdays"
                           editable="false"/>
            </column>
        </form>
    </layout>
</fragment>
