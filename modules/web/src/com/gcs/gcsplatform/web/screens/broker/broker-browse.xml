<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://brokerBrowse.caption"
        focusComponent="brokersTable"
        messagesPack="com.gcs.gcsplatform.web.screens.name">
    <data readOnly="true">
        <collection id="brokersDc"
                    class="com.gcs.gcsplatform.entity.masterdata.Broker">
            <view extends="_local">
                <property name="user"
                          view="_minimal"/>
            </view>
            <loader id="brokersDl">
                <query>
                    <![CDATA[select e from gcsplatform_Broker e order by e.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="brokersTable"
            spacing="true">
        <filter id="filter"
                applyTo="brokersTable"
                dataLoader="brokersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="brokersTable"
                    width="100%"
                    dataContainer="brokersDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="user"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="brokersTable.create"/>
                <button id="editBtn"
                        action="brokersTable.edit"/>
                <button id="removeBtn"
                        action="brokersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
