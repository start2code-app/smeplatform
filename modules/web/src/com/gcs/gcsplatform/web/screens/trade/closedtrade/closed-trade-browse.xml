<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://closedTradeBrowse.caption"
        focusComponent="closedTradesTable"
        messagesPack="com.gcs.gcsplatform.web.screens.trade.closedtrade">
    <data readOnly="true">
        <collection id="closedTradesDc"
                    class="com.gcs.gcsplatform.entity.trade.ClosedTrade">
            <view extends="_local">
                <property name="trade" view="_local"/>
            </view>
            <loader id="closedTradesDl">
                <query>
                    <![CDATA[select e from gcsplatform_ClosedTrade e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="closedTradesTable"
            spacing="true">
        <filter id="filter"
                applyTo="closedTradesTable"
                dataLoader="closedTradesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="closedTradesTable"
                    width="100%"
                    dataContainer="closedTradesDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="trade.bondDescription"/>
                <column id="trade.brooveride"/>
                <column id="trade.buybroker"/>
                <column id="trade.buybrokerage"/>
                <column id="trade.buyer"/>
                <column id="trade.buyerAgent"/>
                <column id="trade.calloption"/>
                <column id="trade.category"/>
                <column id="trade.cpair1"/>
                <column id="trade.cpair2"/>
                <column id="trade.cpair3"/>
                <column id="trade.created"/>
                <column id="trade.currency"/>
                <column id="trade.gbpEquivalent"/>
                <column id="trade.gc"/>
                <column id="trade.hairCut"/>
                <column id="trade.isin"/>
                <column id="trade.maturityDate"/>
                <column id="trade.nominal"/>
                <column id="trade.notes"/>
                <column id="trade.numdays"/>
                <column id="trade.origtraderef"/>
                <column id="trade.repoRate"/>
                <column id="trade.sellbroker"/>
                <column id="trade.sellbrokerage"/>
                <column id="trade.seller"/>
                <column id="trade.sellerAgent"/>
                <column id="trade.special"/>
                <column id="trade.startPrice"/>
                <column id="trade.status"/>
                <column id="trade.subs"/>
                <column id="trade.tradeCurrency"/>
                <column id="trade.tradeDate"/>
                <column id="trade.traderef"/>
                <column id="trade.updatedOn"/>
                <column id="trade.uti"/>
                <column id="trade.valueDate"/>
                <column id="trade.xrate1"/>
                <column id="trade.xrate2"/>
                <column id="trade.xrate3"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="closedTradesTable.create"/>
                <button id="editBtn"
                        action="closedTradesTable.edit"/>
                <button id="removeBtn"
                        action="closedTradesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
