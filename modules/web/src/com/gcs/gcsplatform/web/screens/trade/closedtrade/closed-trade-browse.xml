<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://closedTradeBrowse.caption"
        messagesPack="com.gcs.gcsplatform.web.screens.trade.closedtrade"
        extends="com/gcs/gcsplatform/web/screens/trade/tradecontainer/trade-container-browse.xml">
    <data>
        <collection id="tradeContainersDc"
                    class="com.gcs.gcsplatform.entity.trade.ClosedTrade">
            <loader id="tradeContainersDl">
                <query>
                    <![CDATA[select e from gcsplatform_ClosedTrade e order by e.updateTs desc]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <groupTable id="tradeContainersTable"
                    aggregatable="true">
            <columns>
                <column id="trade.buyGbpEquivalent"
                        collapsed="false">
                    <aggregation type="SUM"/>
                </column>
                <column id="trade.sellGbpEquivalent"
                        collapsed="false">
                    <aggregation type="SUM"/>
                </column>
            </columns>
        </groupTable>
    </layout>
</window>