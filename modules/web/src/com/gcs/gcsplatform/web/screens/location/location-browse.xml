<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://locationBrowse.caption"
        focusComponent="locationsTable"
        messagesPack="com.gcs.gcsplatform.web.screens.location">
    <data readOnly="true">
        <collection id="locationsDc"
                    class="com.gcs.gcsplatform.entity.masterdata.Location">
            <view extends="_local"/>
            <loader id="locationsDl">
                <query>
                    <![CDATA[select e from gcsplatform_Location e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="locationsTable"
            spacing="true">
        <filter id="filter"
                applyTo="locationsTable"
                dataLoader="locationsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="locationsTable"
                    width="100%"
                    dataContainer="locationsDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="locationsTable.create"/>
                <button id="editBtn"
                        action="locationsTable.edit"/>
                <button id="removeBtn"
                        action="locationsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
