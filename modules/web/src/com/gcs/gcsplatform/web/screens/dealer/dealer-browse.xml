<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://dealerBrowse.caption"
        focusComponent="dealersTable"
        messagesPack="com.gcs.gcsplatform.web.screens.dealer">
    <data readOnly="true">
        <collection id="dealersDc"
                    class="com.gcs.gcsplatform.entity.masterdata.Dealer">
            <view extends="_local"/>
            <loader id="dealersDl">
                <query>
                    <![CDATA[select e from gcsplatform_Dealer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dealersTable"
            spacing="true">
        <filter id="filter"
                applyTo="dealersTable"
                dataLoader="dealersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="dealersTable"
                    width="100%"
                    dataContainer="dealersDc">
            <actions>
                <action id="create"
                        type="create"/>
                <action id="edit"
                        type="edit"/>
                <action id="remove"
                        type="remove"/>
            </actions>
            <columns>
                <column id="dealer"/>
                <column id="active"/>
                <column id="admin"/>
                <column id="application"/>
                <column id="dealerName"/>
                <column id="password"/>
                <column id="sheet"/>
                <column id="sheetNew"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="dealersTable.create"/>
                <button id="editBtn"
                        action="dealersTable.edit"/>
                <button id="removeBtn"
                        action="dealersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions"
              spacing="true"
              visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
