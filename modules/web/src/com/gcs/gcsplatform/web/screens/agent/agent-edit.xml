<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://agentEdit.caption"
        focusComponent="form"
        messagesPack="com.gcs.gcsplatform.web.screens.agent">
    <data>
        <instance id="agentDc"
                  class="com.gcs.gcsplatform.entity.masterdata.Agent">
            <view extends="_local">
                <property name="counterparty"
                          view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions"
            spacing="true">
        <form id="form"
              dataContainer="agentDc">
            <column width="350px">
                <pickerField id="counterpartyField"
                             property="counterparty">
                    <actions>
                        <action id="lookup"
                                type="picker_lookup"/>
                        <action id="clear"
                                type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="agentNameField"
                           property="agent"/>
            </column>
        </form>
        <hbox id="editActions"
              spacing="true">
            <button id="commitAndCloseBtn"
                    action="windowCommitAndClose"/>
            <button id="closeBtn"
                    action="windowClose"/>
        </hbox>
    </layout>
</window>
